{
  "distSpecVersion": "1.0.1-dev",
  "storage": {
      "rootDirectory": "/tmp/zot"
  },
  "http": {
      "address": "0.0.0.0",
      "port": "8080",
      "AllowOrigin": "*",
      "auth": {
        "htpasswd": {
          "path": "test/data/htpasswd"
        },
        "failDelay": 1
      }
  },
  "log": {
      "level": "debug",
      "output":"/tmp/zotd/zot.log"
  },
  "extensions": {
        "search": {
          "enable": true,
          "cve": {
            "updateInterval": "24h"
          }
        }
    }


}
